.container {
    width: 100%;
    height: 100%;
}

.button {
    width: auto;
    height: auto;
    margin-left: 30px;
    margin-right: 30px;
    margin-top: 30px;
    margin-bottom: 30px;
    font-size: 40px;
    padding-left: 0;
    padding-right: 0;
    padding-top: 0;
    padding-bottom: 0;
    max-width: none;
    align-self: stretch;
    align-items: center;
    justify-content: flex-start;
    min-width: 30%;
    transition-timing-function: ease-in-out;
    transition-duration: 200ms;
}

.button:hover {
    color: rgb(241, 241, 241);
    border-left-color: rgba(0, 0, 0, 0);
    border-right-color: rgba(0, 0, 0, 0);
    border-top-color: rgba(0, 0, 0, 0);
    border-bottom-color: rgba(0, 0, 0, 0);
    border-left-width: 1px;
    border-right-width: 1px;
    border-top-width: 1px;
    border-bottom-width: 1px;
    background-color: rgb(24, 24, 24);
    transition-timing-function: ease-in-out;
    transition-duration: 200ms;
}

.level-button {
    width: 15%;
    height: 40%;
    margin-left: 20px;
    margin-right: 20px;
    margin-top: 20px;
    margin-bottom: 20px;
    font-size: 40px;
    padding-left: 0;
    padding-right: 0;
    padding-top: 0;
    padding-bottom: 0;
    max-width: none;
    align-self: stretch;
    align-items: center;
    justify-content: flex-start;
    min-width: auto;
    transition-timing-function: ease-in-out;
    transition-duration: 200ms;
}

.level-button:hover {
    width: 15%;
    height: 40%;
    margin-left: 20px;
    margin-right: 20px;
    margin-top: 20px;
    margin-bottom: 20px;
    font-size: 40px;
    padding-left: 0;
    padding-right: 0;
    padding-top: 0;
    padding-bottom: 0;
    max-width: none;
    align-self: stretch;
    align-items: center;
    justify-content: flex-start;
    min-width: auto;
    transition-timing-function: ease-in-out;
    transition-duration: 200ms;
    color: rgb(255, 255, 255);
    background-color: rgb(22, 22, 22);
    border-left-width: 1px;
    border-right-width: 1px;
    border-top-width: 1px;
    border-bottom-width: 1px;
    border-left-color: rgb(0, 0, 0);
    border-right-color: rgb(0, 0, 0);
    border-top-color: rgb(0, 0, 0);
    border-bottom-color: rgb(0, 0, 0);
}

.text {
    color: rgb(255, 255, 255);
    font-size: 40px;
    -unity-text-align: upper-center;
    margin-left: 10px;
    margin-right: 10px;
    margin-top: 10px;
    margin-bottom: 10px;
}

.headerText {
    color: rgb(255, 255, 255);
    font-size: 70px;
}
